{
    "manifest_version": 3,
    "version": "0.1",
    "short_name": "OM",
    "name": "OpenMenu",
    "description": "Extension allow you rapidly to add values to input text",
    "homepage_url": "https://www.RandusLab.com/",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {

    },

    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        {
            "resources": [
              
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "index.js",
                "content.js"
            ],
            "css": [
              "style.css"
            ],
            "all_frames": true
        }
    ],
    "sandbox": {
        "pages": [
           
        ]
    }
}