{
  "references": [
    {
      "path": "./src/tsconfig.json"
    },
    {
      "path": "./src-iframe/tsconfig.json"
    },
    {
      "path": "./src-pop/tsconfig.json"
    }
  ],
  "compilerOptions": {
    "composite": true,
    "allowJs": false,
    "strict": true,
    "module": "ES2015",
    "target": "ES6",
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "./dist/src/**/*",
    "./dist/iframe/**/*",
    "./dist/pop/**/*"
  ]
}